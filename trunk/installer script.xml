<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>JFindMyFiles</appname>
        <appversion>0.5</appversion>
        <authors>
            <author name="Patrícia Monteiro" email="ticamonteiro@gmail.com"/>
            <author name="Sérgio Lopes" email="knitter.is@gmail.com"/>
        </authors>
        <url>http://jfindmyfiles.berlios.de/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="320" height="240" resizable="yes"/>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="por" langDisplayType="native" useFlags="no"/>
		<langpack iso3="eng" langDisplayType="native" useFlags="no"/>
		<langpack iso3="fra" langDisplayType="native" useFlags="no"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="LICENSE"/>
        <res id="InfoPanel.info" src="README"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>Ficheiros de instalação base</description>
            <file src="README" targetdir="$INSTALL_PATH"/>
            <file src="LICENSE" targetdir="$INSTALL_PATH"/>
			<file src="bin" targetdir="$INSTALL_PATH"/>
			<file src="etc" targetdir="$INSTALL_PATH"/>
			<file src="jfindmyfiles" targetdir="$INSTALL_PATH"/>
			<file src="platform8" targetdir="$INSTALL_PATH"/>			
            <!-- <file src="script.bat" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/script.bat"/> <!-- The file will be parsed --> 
        </pack>
    </packs>    
</installation>
